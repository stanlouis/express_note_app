<form id="myForm" data-id="{{notes.id}}">
  <div class="form_item">
    <label>Owner of note:</label>
    <input type="text" id="owner" name="owner" value="{{notes.owner}}">
  </div>

  <div class="form_item">
    <label>Title of the note:</label>
    <input type="text" id="title" name="title" value="{{notes.title}}">
  </div>

  <div class="form_item">
    <label>Message:</label>
    <textarea id="message" name="message">{{notes.message}}</textarea>
  </div>
  <button type="submit"> Update note </button>
</form>

<script>
  $('#myForm').on('submit', (e) => {
    e.preventDefault();

    const id = $('#myForm').data('id');
    const jsonData = {
      owner: $('#owner').val(),
      title: $('#title').val(),
      message: $('#message').val()
    }

    $.ajax({
      type: 'PATCH',
      url: `/api/edit_note/${id}`,
      data: JSON.stringify(jsonData),
      contentType: 'application/json',
      success: (data) => {
        window.location.href = "/"
      },
      error: () => {
        alert('oops!!')
      }
    })


  })
</script>